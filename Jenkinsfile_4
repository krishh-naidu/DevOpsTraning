pipeline {
    agent none
    stages{
        stage ('Build'){
            steps{
                echo "this is build stage"
            }
        }
        stage ('Deploy'){

          input {
            message "Ready to deploy"
            ok "yes"
          }

          when {
              beforeAgent true
              branch "main"
          }
          steps{
              echo "this is deployment stage"
          }
      }
    }
}
