pipeline {
    agent none
   # triggers {
   #     pollSCM "*/10 * * * *"
   # }
    stages{
        stage ('Build'){
            steps{
                echo "this is build stage"
            }
        }
        stage ('Deploy'){
          input{
                    message "Ready to continue?"
                    ok "Yes"
                    submitter "ssbostan"
                    parameters {
                    string(name: "DEPLOY_ENV", defaultValue: "production")
                }
                }
          steps{
              echo "this is deployment stage"
          }
      }
    }
}
