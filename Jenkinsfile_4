pipeline {
    agent none
    stages{
        stage ('Build'){
            steps{
                echo "this is build stage"
            }
        }
        stage ('Deploy'){
         when {
              beforeAgent true
              branch "Jenkins_Training"
          }
          steps{
          input {
                message: "Ready to deploy?",
                ok: "Yes",
                submitter: "ssbostan,admin,admins,managers",
                submitterParameter: "SUBMITTER_USERNAME",
            }
              echo "this is deployment stage"
          }
      }
    }
}
