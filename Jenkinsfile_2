pipeline {
    agent any
    environment {
        DEPLOY_TO = 'test'
    }
    stages{
        stage ('Build'){
            steps{
                echo "this is build stage"
            }
        }
        stage ('Deploy'){
            when {
                branch "main"
                environment_name: 'DEPLOY_TO', value: 'production'
            }
            steps{
                echo "this is deployment stage"
            }
        }
    }
}
